{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "es2020"
    ],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/components/*": [
        "src/shared/components/*"
      ],
      "@/features/*": [
        "src/features/*"
      ],
      "@/shared/*": [
        "src/shared/*"
      ],
      "@/helper/*": [
        "src/shared/helper/*"
      ],
      "@/lib/*": [
        "src/shared/lib/*"
      ],
      "@/types/*": [
        "src/shared/types/*"
      ],
      "@/battleAnalyzer": [
        "src/features/analysis/services/battleAnalyzer"
      ],
      "@/aiAnalysisService": [
        "src/features/analysis/services/aiAnalysisService"
      ],
      "@/components/MaterialMenu": [
        "src/features/analysis/ui/MaterialMenu/index.tsx"
      ]
    },
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
